<div class="contact-wrap">
  <div class="contact-flex-wrap">
    <div class="flex-form">
      <h1>CONTACT</h1>

      <%= form_for @contact do |f| %>
        <%= f.text_field :name, required: true, class: "form-control", placeholder: "Name" %>

        <br>

        <%= f.email_field :email, required: true, class: "form-control", placeholder: "Email" %>

        <br>

        <%= f.text_area :message, as: :text, class: "form-control", rows: 11, placeholder: "Message" %>

        <div style="display:none">
          <%= f.label :nickname %><br>
          <%= f.text_field :nickname, hint: 'leave this field blank' %>
        </div>
        <br>
        <%= f.submit 'Submit', class: "btn btn-secondary" %>
      <% end %>
    </div>

    <div class="flex-map">
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d99370.55005076411!2d-77.08478746053802!3d38.8935754271369!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89b7c6de5af6e45b%3A0xc2524522d4885d2a!2sWashington%2C+DC!5e0!3m2!1sen!2sus!4v1523927972278" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>
  </div>
</div>

<%= render 'shared/application_footer' %>
